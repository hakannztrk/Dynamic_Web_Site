@model Dynamic_Web_Site.Models.Model.Tanitim

@{
    ViewBag.Title = "Tanıtım Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Tanıtım Düzenle</h3>

@using (Html.BeginForm("Edit", "Tanitim", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Tanitim</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.TNT_Id)

    <div class="form-group">
        @Html.LabelFor(model => model.TNT_TanıtımAdi, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TNT_TanıtımAdi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TNT_TanıtımAdi, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.TNT_Tanitim, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @* Video dosyasını yüklemek için file input *@
            <input type="file" name="TNT_Tanitim" class="form-control" accept="video/mp4, video/x-m4v, video/*" />
            @Html.ValidationMessageFor(model => model.TNT_Tanitim, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Status, new List<SelectListItem>
            {
                new SelectListItem { Text = "Open", Value = "Open", Selected = Model.Status == "Open" },
                new SelectListItem { Text = "Close", Value = "Close", Selected = Model.Status == "Close" }
            }, "-Durum Seç-", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 text-right">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>
