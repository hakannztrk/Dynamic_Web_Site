@model IEnumerable<Dynamic_Web_Site.Models.Model.AltKategori>

@{
    ViewBag.Title = "Alt Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script>
    $(document).ready(function () {
        $('#myTable').DataTable(
            { "language": { "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json" } }


        );
    });
</script>
<h3>Alt Kategoriler</h3>

<p>
    @Html.ActionLink("Alt Kategori Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table" id="myTable">
   <thead> 
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kategori.KTG_Adi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AKT_Adi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AKT_Aciklama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AKT_Create_Date)
        </th>

        <th>İşlemler</th>
    </tr>
        </thead>
    <tbody>
    @foreach (var item in Model)
    {
        if (item.Status == "Open")
        {
            <tr class="success">
                <td>
                    @Html.DisplayFor(modelItem => item.Kategori.KTG_Adi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AKT_Adi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AKT_Aciklama)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AKT_Create_Date)
                </td>


                <td>

                    @Html.ActionLink("Düzenle", "Edit", new { id = item.AKT_Id }, new { @class = "btn btn-warning" }) |

                    @Html.ActionLink("AltKategori Sil", "Delete", new { id = item.AKT_Id }, new { @class = "btn btn-danger" })


                </td>
            </tr>
        }
        else
        {
            <tr class="danger">
                <td>
                    @Html.DisplayFor(modelItem => item.Kategori.KTG_Adi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AKT_Adi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AKT_Aciklama)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AKT_Create_Date)
                </td>


                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.AKT_Id }, new { @class = "col - md - offset - 2 col - md - 10 text - right btn btn-warning" })

                </td>
            </tr>
        }

    }
        </tbody>
</table>
