@model Dynamic_Web_Site.Models.Model.Hizmet

@{
    ViewBag.Title = "Hizmet Kaldır";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h3>Hizmeti silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Hizmet</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.HZM_Baslik)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HZM_Baslik)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HZM_Aciklama)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HZM_Aciklama)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HZM_ResimURL)
        </dt>

        <dd>
            <img src="@Model.HZM_ResimURL" alt="Hizmet Resmi" style="max-width:300px; height:auto;" />
        </dd>




    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color text-right">
            <input type="submit" value="Hizmet Sil" class="btn btn-danger" />

        </div>
        <div>
            @Html.ActionLink("Geri Dön", "Index")
        </div>
    }
</div>
