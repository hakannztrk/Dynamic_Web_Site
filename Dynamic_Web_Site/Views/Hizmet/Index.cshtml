@model IEnumerable<Dynamic_Web_Site.Models.Model.Hizmet>

@{
    ViewBag.Title = "Hizmetler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script>
    $(document).ready(function () {
        $('#myTable').DataTable(
            { "language": { "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json" } }


        );
    });
</script>
<h3>Hizmetler</h3>

<p>
    @Html.ActionLink("Yeni Hizmet", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HZM_Baslik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HZM_Aciklama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HZM_ResimURL)
            </th>

            <th>@Html.DisplayNameFor(model => model.HZM_Create_Date)</th>

            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Status == "Open")
            {
                <tr class="success">
                    <td>
                        @Html.DisplayFor(modelItem => item.HZM_Baslik)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HZM_Aciklama)
                    </td>
                    <td>
                        <img class="img-responsive" src="@item.HZM_ResimURL" alt="Logo" style="width:100px;height:auto;" />
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.HZM_Create_Date)
                    </td>
                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.HZM_Id }, new { @class = "btn btn-warning" }) |

                        @Html.ActionLink("Hizmet Sil", "Delete", new { id = item.HZM_Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
            else
            {
                <tr class="danger">
                    <td>
                        @Html.DisplayFor(modelItem => item.HZM_Baslik)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HZM_Aciklama)
                    </td>
                    <td>
                        <img class="img-responsive" src="@item.HZM_ResimURL" alt="Logo" style="width:100px;height:auto;" />
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.HZM_Create_Date)
                    </td>
                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.HZM_Id }, new { @class = "btn btn-warning" }) 
                    </td>
                </tr>
            }

        }
    </tbody>
</table>
