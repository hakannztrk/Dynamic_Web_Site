@model IEnumerable<Dynamic_Web_Site.Models.Model.Urun>

@{
    ViewBag.Title = "Ürünler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .limited-cell {
        max-width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: inline-block;
    }
</style>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable(
            { "language": { "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json" } }


        );
    });
</script>
<h3>Ürünler</h3>

<p>
    @Html.ActionLink("Yeni Ürün", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table " id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AltKategori.AKT_Adi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.URN_UrunAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.URN_Baslik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.URN_UrunAciklama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.URN_ResimURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.URN_Create_Date)
            </th>

            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Status == "Open")
            {
                <tr class="success">
                    <td>
                        @Html.DisplayFor(modelItem => item.AltKategori.AKT_Adi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.URN_UrunAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.URN_Baslik)
                    </td>
                    <td>
                        <span class="limited-cell" title="@item.URN_UrunAciklama">
                            @item.URN_UrunAciklama
                        </span>
                    </td>
                    <td>
                        <img class="img-responsive" src="@item.URN_ResimURL" alt="Logo" style="width:100px;height:auto;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.URN_Create_Date)
                    </td>

                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.URN_Id }, new { @class = "btn btn-warning" }) |

                        @Html.ActionLink("Ürünü Sil", "Delete", new { id = item.URN_Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
            else
            {
                <tr class="danger">
                    <td>
                        @Html.DisplayFor(modelItem => item.AltKategori.AKT_Adi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.URN_UrunAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.URN_Baslik)
                    </td>
                    <td>
                        <span class="limited-cell" title="@item.URN_UrunAciklama">
                            @item.URN_UrunAciklama
                        </span>
                    </td>
                    <td>
                        <img class="img-responsive" src="@item.URN_ResimURL" alt="Logo" style="width:100px;height:auto;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.URN_Create_Date)
                    </td>

                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.URN_Id }, new { @class = "btn btn-warning" })


                    </td>
                </tr>
            }

        }
    </tbody>
</table>
