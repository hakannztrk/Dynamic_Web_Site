@model Dynamic_Web_Site.Models.Model.Hakkimizda

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Hakkimizda</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.HKM_Id)

        <div class="form-group">
            @Html.LabelFor(model => model.HKM_Aciklama, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                <textarea name="HKM_Aciklama" class="ckeditor">@Model.HKM_Aciklama</textarea>


            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 text-right">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>
