            @Html.LabelFor(model => model.HKM_Aciklama, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HKM_Aciklama, new { htmlAttributes = new { @class = "form-control" } })
